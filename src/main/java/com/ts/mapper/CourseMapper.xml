<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ts.mapper.CourseMapper">

    <resultMap id="courseMap" type="Course">
        <id property="id" column="id" />
        <result property="ownerId" column="owner_id"/>
    </resultMap>

    <insert id="addCourse" useGeneratedKeys="true" parameterType="Course" keyProperty="id">
        insert into course (description,name,owner_id)
        values(#{description},#{name},#{ownerId})
    </insert>

    <select id="getCourseById" parameterType="int" resultMap="courseMap">
        SELECT * from course where id=#{courseId}
    </select>

    <select id="getCoursesById"  resultMap="courseMap">
        SELECT * from course WHERE `id` in
        <foreach collection="list" item="id" open="(" close=")"
                 separator=",">
            #{id}
        </foreach>
    </select>

    <select id="getCourseByName" parameterType="java.lang.String" resultMap="courseMap">
        SELECT * from course where name like concat('%',#{name},'%')
    </select>



</mapper>