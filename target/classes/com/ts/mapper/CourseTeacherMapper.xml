<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ts.mapper.CourseTeacherMapper">
    <insert id="addCourseTeacher" useGeneratedKeys="true" parameterType="CourseTeacher">
        insert into course_teacher (course_id,teacher_id)
        values(#{courseId},#{teacherId})
    </insert>

    <delete id="deleteCourseTeacher" parameterType="CourseTeacher">
        delete from course_teacher where course_id=#{courseId} AND teacher_id=#{teacherId}
    </delete>

    <select id="getTeacherCourses" parameterType="java.lang.String" resultType="int">
        SELECT course_id from course_teacher where teacher_id=#{teacherId}
    </select>
</mapper>