<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ts.mapper.QuestionMapper">
    <resultMap id="questionResultMap" type="Question">
        <id property="id" column="id" />
        <result property="alternativeAnswer" column="alternative_answer"/>
        <result property="courseId" column="course_id"/>
    </resultMap>

    <insert id="addQuestions" useGeneratedKeys="true" parameterType="java.util.List">
        insert into question (description,answer,alternative_answer,course_id)
        values
        <foreach collection="list" item="item" index="index" separator="," >
            (#{item.description},#{item.answer},#{item.alternativeAnswer},#{item.courseId})
        </foreach>
    </insert>

    <select id="queryQuestions" resultMap="questionResultMap">
        SELECT * FROM question WHERE course_id=#{courseId} ORDER BY RAND() LIMIT #{num}
    </select>
</mapper>